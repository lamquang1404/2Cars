<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c0000000"
    tools:context="quangnguyen.com.twocars.GameOverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Over"
        android:id="@+id/GameOver_Name"
        android:textSize="50dp"
        android:layout_above="@+id/Score_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/restart_button"
        android:background="@drawable/icon_replay"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score"
        android:id="@+id/Score_Name"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/BestScore_Name"
        android:layout_toLeftOf="@+id/BestScore"
        android:layout_toStartOf="@+id/BestScore"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Score"
        android:layout_alignTop="@+id/Score_Name"
        android:layout_alignLeft="@+id/BestScore"
        android:layout_alignStart="@+id/BestScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Best"
        android:id="@+id/BestScore_Name"
        android:layout_above="@+id/restart_button"
        android:layout_alignLeft="@+id/Score_Name"
        android:layout_alignStart="@+id/Score_Name"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/BestScore"
        android:layout_alignTop="@+id/BestScore_Name"
        android:layout_toRightOf="@+id/restart_button"
        android:layout_toEndOf="@+id/restart_button"
        android:layout_marginLeft="4dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/BackgroundSound_gameOver"
        android:background="@drawable/icon_background_sound"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/restart_button"
        android:layout_alignLeft="@+id/restart_button"
        android:layout_alignStart="@+id/restart_button" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/Sound_gameOver"
        android:background="@drawable/icon_sound"
        android:layout_alignTop="@+id/BackgroundSound_gameOver"
        android:layout_toLeftOf="@+id/Score"
        android:layout_toStartOf="@+id/Score" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/HowToPlay"
        android:background="@drawable/icon_how_to_play"
        android:layout_alignTop="@+id/BackgroundSound_gameOver"
        android:layout_alignLeft="@+id/GameOver_Name"
        android:layout_alignStart="@+id/GameOver_Name" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/AboutUs"
        android:background="@drawable/icon_about_us"
        android:layout_alignTop="@+id/Sound_gameOver"
        android:layout_alignRight="@+id/GameOver_Name"
        android:layout_alignEnd="@+id/GameOver_Name" />
</RelativeLayout>
